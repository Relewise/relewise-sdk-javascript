    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "lib": ["es5", "es6", "dom", "esnext"],
    // This causes issues when creating index.d.ts
    // "paths": {
    //   "@/*": [
