{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "allowJs": true,
        "lib": ["es5", "es6", "dom", "esnext"],
        "paths": {
            "relewise-client": [
                "node_modules/relewise-client/src"
            ],
            "relewise-client/*": [
                "node_modules/relewise-client/src/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "src/**/*.ts",
        "tests/**/*.ts",
        "environment.d.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
}